{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "src/electron",
        "outDir": "dist",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true
    },
    "include": [
        "src/electron/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}